<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:id="@+id/pokemon_list_rv"
            android:paddingBottom="42dp"
            android:clipToPadding="false"
            android:visibility="invisible"/>

        <ProgressBar
            android:id="@+id/pb_loading_circle"
            android:layout_centerHorizontal="true"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="32dp"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/ll_loading_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_loading_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@android:color/holo_red_dark"
                android:textColor="#fff"
                android:visibility="invisible"
                android:text="@string/loading_error_msg"/>

            <Button
                android:id="@+id/btn_loading_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:text="@string/loading_error_button"
                android:textSize="22sp"
                android:layout_margin="4dp"
                android:visibility="invisible"/>
        </LinearLayout>

        <!-- force at bottom -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="end"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/pokemon_list_FAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="20dp"
                android:visibility="visible"
                app:fabSize="normal"
                android:elevation="6dp"
                android:src="@drawable/ic_action_search"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>